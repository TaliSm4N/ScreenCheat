Insert into Userinfo (id,pwd,win,lose,u_kill,u_death)  values(‘darrrkk’, ‘foradun’, ‘532’, ‘0’, ‘6400’, ‘0’);

gcc -o DT_DB DT_DB.c -I/usr/include/mysql -L/usr/lib/mysql -lmysqlclient
